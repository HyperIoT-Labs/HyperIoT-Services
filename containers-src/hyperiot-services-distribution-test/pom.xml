        <artifactId>karaf-maven-plugin</artifactId>
                
        <version>${karaf.version}</version>
                
        <extensions>true</extensions>
                
        <configuration>
                    
          <bootFeatures>
                        
            <feature>standard</feature>
                        
            <feature>hawtio</feature>
                        
            <feature>hyperiot-core-test</feature>
                        
            <feature>hyperiot-services</feature>
                        
            <feature>hyperiot-services-test</feature>
                        
            <feature>hyperiot-jobscheduler</feature>
                        
            <feature>hyperiot-avro</feature>
                        
            <feature>hyperiot-hproject</feature>
                        
            <feature>hyperiot-algorithm</feature>
                        
            <feature>hyperiot-zookeeperconnector</feature>
                        
            <feature>hyperiot-kafkaconnector</feature>
                        
            <feature>pax-jdbc-h2</feature>
                        
            <feature>hyperiot-cloudevents</feature>
                        
            <feature>hyperiot-ruleengine</feature>
                        
