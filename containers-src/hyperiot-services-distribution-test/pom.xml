      <plugin>
                
        <artifactId>maven-antrun-plugin</artifactId>
                
        <executions>
                    
          <execution>
                        
            <id>fix-distro</id>
                        
            <phase>prepare-package</phase>
                        
            <goals>
                            
              <goal>run</goal>
                          
            </goals>
                        
            <configuration>
                            
              <tasks>
                                
                <delete dir="${project.build.directory}/assembly/system/it/acsoftware" includeemptydirs="true"/>
                              
              </tasks>
                          
            </configuration>
                      
          </execution>
                  
        </executions>
              
      </plugin>
          
